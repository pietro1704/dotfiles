syntax enable
set number
set mouse=a

set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

set shortmess=a

call plug#begin()

Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'
Plug 'preservim/nerdtree'
Plug 'rust-lang/rust.vim'
Plug 'vim-autoformat/vim-autoformat'
Plug 'sbdchd/neoformat'

call plug#end()

nmap <C-;>:NERDTreeToggle<CR>

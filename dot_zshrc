xcode-increase-cache() {
    local BOLD='\033[1m'
    local GREEN='\033[0;32m'
    local YELLOW='\033[1;33m'
    local NC='\033[0m'

    echo -e "${BOLD}Increasing Xcode Cache Sizes${NC}\n"

    echo -e "${YELLOW}Increasing Clang module cache size to 20GB...${NC}"
    defaults write com.apple.dt.Xcode IDEModuleCacheSizeInMegabytes -int 20480
    echo -e "${GREEN}✓ Clang module cache: 20GB${NC}\n"

    echo -e "${YELLOW}Increasing Swift compilation cache...${NC}"
    defaults write com.apple.dt.Xcode IDESwiftCompilationCacheSize -int 20480
    echo -e "${GREEN}✓ Swift compilation cache: 20GB${NC}\n"

    echo -e "${YELLOW}Enabling aggressive compilation caching...${NC}"
    defaults write com.apple.dt.Xcode EnableModuleCaching -bool YES
    defaults write com.apple.dt.Xcode IDEBuildOperationMaxNumberOfConcurrentCompileTasks 16
    echo -e "${GREEN}✓ Compilation caching enabled${NC}\n"

    echo -e "${YELLOW}Optimizing build system for M4 Max...${NC}"
    defaults write com.apple.dt.Xcode ShowBuildOperationDuration -bool YES
    echo -e "${GREEN}✓ Build system optimized for 16 cores${NC}\n"

    echo -e "${YELLOW}Optimizing indexing...${NC}"
    defaults write com.apple.dt.Xcode IDEIndexerActivityShowNumericProgress -bool YES
    defaults write com.apple.dt.Xcode IDEIndexDisable -bool NO
    defaults write com.apple.dt.Xcode IDEIndexEnableIncrementalIndexing -bool YES
    echo -e "${GREEN}✓ Indexing optimized (still enabled)${NC}\n"

    echo -e "${YELLOW}Disabling unnecessary features...${NC}"
    defaults write com.apple.dt.Xcode IDEDisableStateRestoration -bool NO
    defaults write com.apple.dt.Xcode IDEEditorCoordinatorTarget_Click -string "SameAsClick"
    echo -e "${GREEN}✓ Unnecessary features disabled${NC}\n"

    echo -e "${BOLD}${GREEN}Cache sizes increased!${NC}"
    echo -e "\n${YELLOW}Restart Xcode for changes to take effect${NC}\n"
}

xcode-optimize() {
    local DERIVED_DATA_PATH="$HOME/Library/Developer/Xcode/DerivedData"
    local BOLD='\033[1m'
    local GREEN='\033[0;32m'
    local YELLOW='\033[1;33m'
    local NC='\033[0m'

    echo -e "${BOLD}Xcode Build Performance Optimizer${NC}\n"

    echo -e "${YELLOW}Cleaning module cache...${NC}"
    rm -rf "$HOME/Library/Developer/Xcode/DerivedData/ModuleCache.noindex"
    echo -e "${GREEN}✓ Module cache cleaned${NC}\n"

    echo -e "${YELLOW}Cleaning old build artifacts (preserving index)...${NC}"
    find "$DERIVED_DATA_PATH" -type d -name "Build" -exec rm -rf {} + 2>/dev/null || true
    echo -e "${GREEN}✓ Build artifacts cleaned${NC}\n"

    echo -e "${YELLOW}Cleaning Xcode logs...${NC}"
    rm -rf "$HOME/Library/Developer/Xcode/UserData/IDEEditorInteractivityHistory"
    rm -rf "$HOME/Library/Developer/Xcode/UserData/IDEFindNavigatorScopes"
    echo -e "${GREEN}✓ Logs cleaned${NC}\n"

    echo -e "${YELLOW}Cleaning build caches...${NC}"
    rm -rf "$HOME/Library/Caches/com.apple.dt.Xcode"
    echo -e "${GREEN}✓ Build caches cleaned${NC}\n"

    echo -e "${YELLOW}Optimizing index databases...${NC}"
    for index_db in $(find "$DERIVED_DATA_PATH" -name "Index.noindex" -type d 2>/dev/null); do
        for db in $(find "$index_db" -name "*.db" -type f 2>/dev/null); do
            sqlite3 "$db" "VACUUM;" 2>/dev/null || true
            echo "  Optimized: $(basename $db)"
        done
    done
    echo -e "${GREEN}✓ Index databases optimized${NC}\n"

    echo -e "${YELLOW}Freeing memory...${NC}"
    sudo purge 2>/dev/null || echo "  (Skipped - requires password)"
    echo -e "${GREEN}✓ Memory freed${NC}\n"

    echo -e "${BOLD}${GREEN}Optimization complete!${NC}"
    echo -e "\nIndex preserved. Restart Xcode for best results.\n"
}

xcode-clean() {
    local DERIVED_DATA_PATH="$HOME/Library/Developer/Xcode/DerivedData"
    local PROJECT_NAME="Pinterest"
    local BOLD='\033[1m'
    local GREEN='\033[0;32m'
    local YELLOW='\033[1;33m'
    local NC='\033[0m'

    echo -e "${BOLD}Safe Xcode Clean (preserving index)${NC}\n"

    local PINTEREST_DD=$(find "$DERIVED_DATA_PATH" -maxdepth 1 -type d -name "${PROJECT_NAME}-*" 2>/dev/null | head -n 1)

    if [ -z "$PINTEREST_DD" ]; then
        echo -e "${YELLOW}No Pinterest derived data found${NC}"
        return 0
    fi

    echo -e "Found: ${GREEN}$(basename $PINTEREST_DD)${NC}\n"

    echo -e "${YELLOW}Cleaning Build folder only...${NC}"
    rm -rf "$PINTEREST_DD/Build"
    echo -e "${GREEN}✓ Build folder cleaned${NC}\n"

    echo -e "${YELLOW}Cleaning Logs...${NC}"
    rm -rf "$PINTEREST_DD/Logs"
    echo -e "${GREEN}✓ Logs cleaned${NC}\n"

    echo -e "${YELLOW}Cleaning Module cache...${NC}"
    rm -rf "$DERIVED_DATA_PATH/ModuleCache.noindex"
    echo -e "${GREEN}✓ Module cache cleaned${NC}\n"

    echo -e "${GREEN}Index preserved!${NC} You can continue working.\n"
}

xcode-restart() {
    killall Xcode 2>/dev/null || true
    sleep 1
    open -a Xcode
    echo "Xcode restarted"
}

xcode-kill-sourcecontrol() {
    killall com.apple.dt.Xcode.sourcecontrol.Git 2>/dev/null || true
    echo "Git sourcecontrol daemon killed"
}

xcode-deep-clean() {
    local BOLD='\033[1m'
    local RED='\033[0;31m'
    local YELLOW='\033[1;33m'
    local NC='\033[0m'

    echo -e "${BOLD}${RED}WARNING: This will delete ALL derived data and index!${NC}"
    echo -e "${YELLOW}You will lose code navigation until reindexing completes.${NC}"
    echo -n "Continue? (y/N): "
    read -r response

    if [[ "$response" =~ ^[Yy]$ ]]; then
        echo "Performing deep clean..."
        rm -rf ~/Library/Developer/Xcode/DerivedData
        rm -rf ~/Library/Caches/com.apple.dt.Xcode
        echo "Deep clean complete. Restart Xcode."
    else
        echo "Cancelled."
    fi
}

xcode-build-times() {
    local SCHEME="${1:-Pinterest}"
    local DESTINATION="platform=iOS Simulator,name=iPhone 15 Pro"

    echo "Analyzing build times for scheme: $SCHEME"
    echo "This will take a while...\n"

    xcodebuild -scheme "$SCHEME" \
        -destination "$DESTINATION" \
        clean build \
        OTHER_SWIFT_FLAGS="-Xfrontend -debug-time-function-bodies -Xfrontend -debug-time-compilation" \
        | grep -E "[0-9]+\.[0-9]+ms" \
        | grep -v "^0\.[0-9]ms" \
        | sort -t. -k1,1rn -k2,2rn \
        | head -50 \
        > ~/Desktop/xcode_build_times.txt

    echo "Top 50 slowest compilations saved to ~/Desktop/xcode_build_times.txt"
    head -20 ~/Desktop/xcode_build_times.txt
}

xcode-status() {
    local BOLD='\033[1m'
    local GREEN='\033[0;32m'
    local CYAN='\033[0;36m'
    local NC='\033[0m'

    echo -e "${BOLD}Xcode Configuration Status${NC}\n"

    echo -e "${CYAN}Cache Sizes:${NC}"
    echo "  Module cache: $(defaults read com.apple.dt.Xcode IDEModuleCacheSizeInMegabytes 2>/dev/null || echo 'default')MB"
    echo "  Swift cache: $(defaults read com.apple.dt.Xcode IDESwiftCompilationCacheSize 2>/dev/null || echo 'default')MB"

    echo -e "\n${CYAN}Build Settings:${NC}"
    echo "  Concurrent compile tasks: $IDEBuildOperationMaxNumberOfConcurrentCompileTasks"
    echo "  Concurrent link tasks: $IDEBuildOperationMaxNumberOfConcurrentLinkTasks"
    echo "  Show build duration: $(defaults read com.apple.dt.Xcode ShowBuildOperationDuration 2>/dev/null || echo 'NO')"

    echo -e "\n${CYAN}Index Settings:${NC}"
    echo "  Index disabled: $(defaults read com.apple.dt.Xcode IDEIndexDisable 2>/dev/null || echo 'NO')"
    echo "  Incremental indexing: $(defaults read com.apple.dt.Xcode IDEIndexEnableIncrementalIndexing 2>/dev/null || echo 'default')"

    echo -e "\n${CYAN}Derived Data:${NC}"
    local dd_size=$(du -sh ~/Library/Developer/Xcode/DerivedData 2>/dev/null | cut -f1)
    echo "  Size: $dd_size"
    echo "  Location: ~/Library/Developer/Xcode/DerivedData"

    echo -e "\n${CYAN}System:${NC}"
    echo "  File descriptor limit: $(ulimit -n)"
    echo "  CPU cores: $(sysctl -n hw.ncpu)"
    echo "  Memory: $(sysctl -n hw.memsize | awk '{print $1/1024/1024/1024}')GB"
}


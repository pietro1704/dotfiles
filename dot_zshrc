function cleanAllCache() {
  echo "âš ï¸  This will clean system and app caches. Continue? (y/N)"
  read -q "REPLY?> " || return 1
  echo

  echo "ğŸ§¹ Cleaning user caches..."
  local cache_dirs=(
    "$HOME/Library/Caches"
    "$HOME/Library/Logs"
    "$HOME/Library/Application Support/Code/CachedData"
    "$HOME/Library/Application Support/discord/Cache"
  )

  for dir in "${cache_dirs[@]}"; do
    if [[ -d "$dir" ]]; then
      echo "  Cleaning $dir"
      find "$dir" -type f -atime +7 -delete 2>/dev/null || true
    fi
  done

  echo "ğŸ§¹ Cleaning system caches (requires sudo)..."
  echo "Continue with system cache cleanup? (y/N)"
  read -q "REPLY?> " || return 1
  echo

  sudo rm -rf /private/var/log/asl/* 2>/dev/null || true
  sudo rm -rf /private/var/folders/*/C/com.apple.DeveloperTools 2>/dev/null || true
  sudo dscacheutil -flushcache
  sudo killall -HUP mDNSResponder

  echo "âœ… Cache cleanup completed!"
}

